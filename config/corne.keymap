#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp ESC       &kp Q  &kp W  &kp E             &kp R             &kp T             &kp Y        &kp U        &kp I   &kp O   &kp P          &trans
&kp TAB       &kp A  &kp S  &kp D             &kp F             &kp G             &kp H        &kp J        &kp K   &kp L   &kp BACKSPACE  &kp ENTER
&kp LEFT_ALT  &kp Z  &kp X  &kp C             &kp V             &kp B             &kp N        &kp M        &trans  &trans  &trans         &trans
                            &kp LEFT_CONTROL  &kp LEFT_COMMAND  &kp LEFT_SHIFT    &lt 1 SPACE  &lt 3 ENTER  &trans
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans    &kp EXCLAMATION  &kp DOUBLE_QUOTES  &kp LS(N3)  &kp DOLLAR      &kp PERCENT    &kp AMPERSAND  &kp SLASH   &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp EQUAL         &trans
&trans    &kp AT           &kp TILDE          &kp LA(E)   &kp UNDERSCORE  &kp MINUS      &kp SEMICOLON  &kp COMMA   &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp QUESTION      &trans
&kp LALT  &trans           &trans             &trans      &kp ASTERISK    &kp PLUS       &kp COLON      &kp PERIOD  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp SINGLE_QUOTE  &trans
                                              &kp LCTRL   &kp LGUI        &mo 3          &none          &trans      &trans
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp TAB    &kp EXCL  &kp AT  &kp HASH  &kp DLLR  &kp PRCNT    &kp CARET  &kp AMPS   &kp KP_MULTIPLY  &kp LPAR  &kp RPAR  &kp BSPC
&kp LCTRL  &trans    &trans  &trans    &trans    &trans       &kp MINUS  &kp EQUAL  &kp LBKT         &kp RBKT  &kp BSLH  &kp GRAVE
&kp LSHFT  &trans    &trans  &trans    &trans    &trans       &kp UNDER  &kp PLUS   &kp LBRC         &kp RBRC  &kp PIPE  &kp TILDE
                             &kp LGUI  &trans    &kp SPACE    &kp RET    &trans     &kp RALT
            >;
        };

        Navigation {
            bindings = <
&trans    &trans  &kp N7  &kp N8     &kp N9    &trans    &trans  &trans    &kp UP    &trans     &trans  &trans
&trans    &kp N0  &kp N4  &kp N5     &kp N6    &trans    &trans  &kp LEFT  &kp DOWN  &kp RIGHT  &trans  &trans
&kp LALT  &trans  &kp N1  &kp N2     &kp N3    &trans    &trans  &trans    &trans    &trans     &trans  &trans
                          &kp LCTRL  &kp LGUI  &trans    &trans  &trans    &trans
            >;
        };
    };
};
